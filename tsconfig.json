{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node", "express"],
    "sourceMap": true,
    "outDir": "dist",
  },
  "include": ["**/*.ts", "**/*.js", "express.d.ts"],
  "exclude": ["node_modules"]
}
